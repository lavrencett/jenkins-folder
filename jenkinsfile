           steps{
            echo "devops is hard"
           }
           
        }
            stage("my second stage"){
            steps{
                echo "devops is tricky"
            }
        
        }
        stage("my third stage"){
            steps{
                echo "devops needs attention"
            }
        }
        stage("my fouth stage"){
            steps{
                echo "divya love exercise"
            }
        }
        stage("my fith stage"){
            steps{
                echo "devops will be fine"
            }
        } 
        stage("my sixth stage"){
